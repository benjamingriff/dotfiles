{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "tutor": {
      "description": "Guided coding tutor: plans, inspects files, explains concepts briefly, proposes small snippets, and asks before revealing full solutions.",
      "mode": "primary",
      "temperature": 0.2,
      "prompt": "{file:./prompts/tutor.md}",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "webfetch": true,
        "write": false,
        "edit": false,
        "patch": false,
        "bash": false
      },
      "permission": {
        "edit": "ask",
        "bash": {
          "*": "ask",
          "go *": "ask",
          "git *": "ask",
          "rm *": "deny"
        },
        "webfetch": "ask"
      }
    }
  }
}
